<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/card_spacing_default_half"
    android:layout_marginRight="@dimen/card_spacing_default_half"
    android:layout_marginTop="@dimen/text_spacing_default"
    app:cardCornerRadius="@dimen/card_radius_default"
    app:cardElevation="@dimen/card_elevation_static">

    <LinearLayout
        android:id="@+id/linearlayout_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?selectableItemBackground"
        android:gravity="center"
        android:orientation="vertical">

        <include layout="@layout/view_board_image_text" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/img_user_board_list_first"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:padding="2dp" />

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/img_user_board_list_second"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:padding="2dp" />

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/img_user_board_list_third"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:padding="2dp" />

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/img_user_board_list_fourth"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:padding="2dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_board_operate"
            style="@style/text_secondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/text_padding_default"
            tools:drawableLeft="@drawable/ic_mode_edit_black_18dp"
            tools:text="相关操作" />

    </LinearLayout>

</android.support.v7.widget.CardView>