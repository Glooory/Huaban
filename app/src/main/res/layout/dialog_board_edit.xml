<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dialog_padding"
    android:paddingTop="@dimen/dialog_padding"
    android:paddingRight="@dimen/dialog_padding">

    <TextView
        android:id="@+id/tv_board_edit_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="名称: "/>

    <EditText
        android:id="@+id/edit_board_edit_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="0dp"
        android:paddingRight="0dp" />

    <TextView
        android:id="@+id/tv_board_edit_gather_des"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/text_margin"
        android:text="画板描述:"/>

    <EditText
        android:id="@+id/edit_board_edit_des"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="left"
        android:paddingLeft="0dp"
        android:paddingRight="0dp" />

    <TextView
        android:id="@+id/tv_board_edit_gather_to"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/text_spacing_default"
        android:text="分类："/>

    <Spinner
        android:id="@+id/spinner_board_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.Spinner.Underlined"/>

</LinearLayout>