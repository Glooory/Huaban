<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relative_board_board_info"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true"
    app:layout_scrollFlags="scroll|enterAlwaysCollapsed">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/img_board_board_cover"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="16dp"
        android:transitionName="@string/board_tran" />

    <TextView
        android:id="@+id/tv_board_board_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/img_board_board_cover"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@id/img_board_board_cover"
        android:background="@color/grey_a700"
        android:maxLines="1"
        android:padding="2dp"
        android:paddingRight="16dp"
        android:textColor="@color/grey_100"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_board_board_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/img_board_board_cover"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@id/img_board_board_cover"
        android:background="@color/grey_al700"
        android:maxLines="1"
        android:ellipsize="marquee"
        android:padding="2dp"
        android:layout_marginRight="16dp"
        android:textColor="@color/grey_200"
        android:textSize="16sp" />

</RelativeLayout>